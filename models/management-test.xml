<model>
	<user><email>joel@fruitionnz.com</email></user>
	
	<name> test-management </name>
	<description> test management strategies on spread model </description>
	
	<random>
		<initialSeed> 1 </initialSeed>
		<replicates> 2 </replicates>
		<offset>23</offset>
   	</random>
	
	<regions>
		<region id="a">
			<resolution>1</resolution>
			<extents north="10" south="-10" west="-10" east="10"/>
		</region>
	</regions>
	
	<period>
		<startTime> 0 </startTime>
		<endTime> 10 </endTime>
	</period>
	
	<output>
		<raster>
			<interval>1</interval>
			<lifestage>all</lifestage>
		</raster>
	</output>
	
	<lifestages>
		<lifestage name="all" populationBased="false">
			<initialDistribution region="a">
				<sites>
					<s x="1" y="0"/>
					<s x="2" y="0"/>
					<s x="3" y="0"/>
					<s x="4" y="0"/>
					<s x="5" y="0"/>
					<s x="0" y="-5"/>
				</sites>
			</initialDistribution>
			
			<phenology region="a">
				<value> 1 </value>
			</phenology>
			
			<event name="r.mdig.neighbour">
				<param name="shape">
					<variable id="shape">
					<value>186</value> 
					</variable>
				</param>
				<param name="radius">
                        <value>1</value>
				</param>
				<ifNotPopulationBased>
					<flag name="b"/>
				</ifNotPopulationBased>
			</event>
			
		</lifestage>
		
	</lifestages>

    <management>
        <strategy name="test_t_event" region="a">
            <description>Test to check event based management works</description>
            <treatments>
            <t>
              <event ls="all" name="r.mdig.survival">
                <param name="survival"><value>90</value></param>
                <!-- Survival needs seed parameter, otherwise it inits from time
                     and just removes the same cells -->
				<param name="seed">
					<seed/>
				</param>
              </event>
            </t>
            </treatments>
        </strategy>
        <strategy name="test_alter_var" region="a">
            <description>Test to check variable management works</description>
            <treatments>
            <t>
              <affectVariable var="shape">
                <decrease>40</decrease>
                <!--<increase></increase>-->
                <!--<ratio></ratio>-->
              </affectVariable>
            </t>
            </treatments>
        </strategy>
        <strategy name="test_map_area" region="a">
            <description>Test to check map area management works</description>
            <treatments>
            <t>
              <area ls="all">
                <!-- POP_MAP substituted by latest map in ls attribute -->
                <mapcalc>if(x()&gt;3,1,null())</mapcalc>
              </area>
              <event ls="all" name="r.mdig.survival">
                <param name="survival"><value>50</value></param>
              </event>
            </t>
            </treatments>
        </strategy>
        <strategy name="test_dyn_area" region="a">
            <description>Test to check dynamic area management works</description>
            <treatments>
            <t>
              <area ls="all">
                <mfilter name="r.mdig.outliers">
                    <param name="max"><value>5</value></param>
                </mfilter>
              </area>
              <event ls="all" name="r.mdig.survival">
                <param name="survival"><value>0</value></param>
              </event>
            </t>
            </treatments>
        </strategy>
    </management>
	
</model>
