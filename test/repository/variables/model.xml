<model>
  <user>
    <email>joel@fruitionnz.com</email>
  </user>
  <name> variables </name>
  <description> Test variable definitions </description>
  <random>
    <initialSeed> 1 </initialSeed>
    <replicates> 2 </replicates>
    <offset>101</offset>
  </random>
  <regions>
    <region id="a">
      <resolution>1</resolution>
      <extents north="10" south="-10" west="-10" east="10"/>
    </region>
  </regions>
  <period>
    <startTime> 0 </startTime>
    <endTime> 5 </endTime>
  </period>
  <output>
    <raster>
      <interval>1</interval>
      <lifestage>all</lifestage>
    </raster>
  </output>
  <lifestages>
    <lifestage name="all" populationBased="false">
      <initialDistribution region="a">
        <sites>
          <s x="1" y="0" count="100"/>
          <s x="2" y="0"/>
          <s x="3" y="0"/>
          <s x="4" y="0"/>
          <s x="5" y="0"/>
          <s x="0" y="-5"/>
        </sites>
      </initialDistribution>
      <phenology region="a">
        <value> 1 </value>
      </phenology>
      <event name="r.mdig.agepop">
            </event>
      <event name="r.mdig.localspread">
        <param name="spread">
          <variable id="d1">
            <value>3</value>
            <value>2</value>
            <range start="3" end="5" step="2"/>
          </variable>
        </param>
        <param name="agem">
          <variable id="agem">
            <value>2</value>
            <!-- Although this tests novalue successfully, the maps
            won't expand. Without agem, localspread thinks that the map is a
            population map. -->
            <novalue/>
          </variable>
        </param>
      </event>
    </lifestage>
  </lifestages>
  <instances baseDir="/home/joel/src/mdig/test/repository/variables">
    <completed>
      <region id="a"/>
      <variable id="agem">2</variable>
      <variable id="d1">3</variable>
    </completed>
    <completed>
      <region id="a"/>
      <variable id="agem">2</variable>
      <variable id="d1">2</variable>
    </completed>
    <completed>
      <region id="a"/>
      <variable id="agem">None</variable>
      <variable id="d1">5</variable>
    </completed>
    <completed>
      <region id="a"/>
      <variable id="agem">None</variable>
      <variable id="d1">2</variable>
    </completed>
    <completed>
      <region id="a"/>
      <variable id="agem">None</variable>
      <variable id="d1">3</variable>
    </completed>
    <completed>
      <region id="a"/>
      <variable id="agem">2</variable>
      <variable id="d1">5</variable>
    </completed>
  </instances>
</model>

